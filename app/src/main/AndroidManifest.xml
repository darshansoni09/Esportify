<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.esportify">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Esportify">
        <activity android:name=".help"></activity>
        <activity android:name=".history" />
        <activity android:name=".bookmark" />
        <activity android:name=".create" />
        <activity android:name=".signup" />
        <activity android:name=".MainActivity" />
        <activity android:name=".tournament" />
        <activity android:name=".user" />
        <activity android:name=".leaderboard" />
        <activity android:name=".home" />
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>